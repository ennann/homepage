---
import { languages } from "../i18n/ui";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<div class="fixed top-4 right-4 z-50 flex gap-2 bg-white/80 backdrop-blur-md p-1 rounded-full border border-gray-200 shadow-sm">
    {
        Object.entries(languages).map(([langCode, label]) => (
            <a href={`/${langCode}/`} class={`px-3 py-1 rounded-full text-sm font-medium transition ${lang === langCode ? "bg-black text-white" : "text-gray-600 hover:bg-gray-100"}`}>
                {label}
            </a>
        ))
    }
</div>
