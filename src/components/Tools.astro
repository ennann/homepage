---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import ToolBadge from "./ToolBadge.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const tools = [
    { name: "ChatGPT", startDate: "2022-11-30" },
    { name: "Claude", startDate: "2023-03-14" },
    { name: "Gemini", startDate: "2023-12-06" },
    { name: "Copilot", startDate: "2021-06-29" },
    { name: "Cursor", startDate: "2023-01-15" },
    { name: "Trae", startDate: "2024-01-15" },
];

const subscriptions = ["ChatGPT", "Claude", "Gemini", "Copilot"];
---

<section id="tools" class="py-16 px-4 max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold mb-6 text-center">{t("tools.title")}</h2>
    <p class="text-lg text-gray-600 mb-12 text-center max-w-2xl mx-auto">
        {t("tools.desc")}
    </p>

    <!-- AI Tools I Use (Badges) -->
    <div class="flex flex-wrap justify-center gap-8 mb-20">
        {tools.map((tool) => <ToolBadge name={tool.name} startDate={tool.startDate} />)}
    </div>

    <!-- AI Tools I Subscription -->
    <div class="text-center">
        <h3 class="text-2xl font-bold mb-8">AI Tools I Subscription</h3>
        <div class="flex flex-wrap justify-center gap-6">
            {
                subscriptions.map((sub) => (
                    <div class="px-8 py-4 bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition flex items-center gap-3">
                        <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse" />
                        <span class="font-bold text-gray-800 text-lg">{sub}</span>
                    </div>
                ))
            }
        </div>
    </div>
</section>
