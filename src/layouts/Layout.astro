---
import "../styles/global.css";
import LanguagePicker from "../components/LanguagePicker.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Ethan Zhao - AI-Driven Product Builder" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favorite.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="min-h-screen bg-[var(--page-bg)] text-gray-900 dark:text-gray-100 antialiased transition-[background-color,color] duration-300">
        <!-- Header Controls Container -->
        <div class="fixed top-0 right-0 p-6 z-50 group">
            <div
                class="flex items-center gap-2 bg-white/80 dark:bg-[rgba(27,32,43,0.85)] backdrop-blur-md p-1.5 rounded-full border border-gray-200 dark:border-[var(--border-subtle)] shadow-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            >
                <ThemeToggle />
                <div class="w-px h-4 bg-gray-200 dark:bg-[var(--border-subtle)]"></div>
                <LanguagePicker />
            </div>
        </div>
        <slot />
    </body>
</html>

<style is:global>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
